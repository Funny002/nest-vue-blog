{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/service/src",
  "monorepo": true,
  "root": "apps/service",
  "compilerOptions": {
    "webpack": true,
    "plugins": ["@nestjs/swagger/plugin"],
    "tsConfigPath": "apps/service/tsconfig.app.json"
  },
  "projects": {
    "service": {
      "type": "application",
      "root": "apps/service",
      "entryFile": "main",
      "sourceRoot": "apps/service/src",
      "compilerOptions": {
        "plugins": ["@nestjs/swagger/plugin"],
        "tsConfigPath": "apps/service/tsconfig.app.json"
      }
    },
    "sso": {
      "type": "application",
      "root": "apps/sso",
      "entryFile": "main",
      "sourceRoot": "apps/sso/src",
      "compilerOptions": {
        "plugins": ["@nestjs/swagger/plugin"],
        "tsConfigPath": "apps/sso/tsconfig.app.json"
      }
    },
    "common": {
      "type": "library",
      "root": "common",
      "entryFile": "index",
      "sourceRoot": "common",
      "compilerOptions": {
        "tsConfigPath": "common/tsconfig.lib.json"
      }
    },
    "config": {
      "type": "library",
      "root": "config",
      "entryFile": "index",
      "sourceRoot": "config",
      "compilerOptions": {
        "tsConfigPath": "config/tsconfig.lib.json"
      }
    },
    "dto": {
      "type": "library",
      "root": "dto",
      "entryFile": "index",
      "sourceRoot": "dto",
      "compilerOptions": {
        "tsConfigPath": "dto/tsconfig.lib.json"
      }
    },
    "middleware": {
      "type": "library",
      "root": "middleware",
      "entryFile": "index",
      "sourceRoot": "middleware",
      "compilerOptions": {
        "tsConfigPath": "middleware/tsconfig.lib.json"
      }
    },
    "mysqlTable": {
      "type": "library",
      "root": "mysqlTable",
      "entryFile": "index",
      "sourceRoot": "mysqlTable",
      "compilerOptions": {
        "tsConfigPath": "mysqlTable/tsconfig.lib.json"
      }
    },
    "pagination": {
      "type": "library",
      "root": "libs/pagination",
      "entryFile": "index",
      "sourceRoot": "libs/pagination",
      "compilerOptions": {
        "tsConfigPath": "libs/pagination/tsconfig.lib.json"
      }
    }
  }
}